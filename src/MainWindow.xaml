<Window x:Class="ReCal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReCal" 
        MinHeight="600" MinWidth="800"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackground}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        AllowsTransparency="False"
        Icon="pack://application:,,,/ReCal;component/recal.ico"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.ClearTypeHint="Enabled"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <DataTemplate x:Key="NavDashboardTemplate">
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" ItemHeight="Auto">
                    <Button Content="Dashboard" Style="{StaticResource NavButton}"
                            IsEnabled="False"/>
                    <Button Content="Wall Lockers" Style="{StaticResource NavButton}"
                            Click="OpenWallLockers_Click"/>
                    <Button Content="Cigars" Style="{StaticResource NavButton}"
                            Click="OpenCigars_Click"/>
                </WrapPanel>
                <WrapPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" ItemHeight="Auto">
                    <Button Content="Info" Style="{StaticResource NavButton}"
                            Click="OpenInfo_Click"/>
                </WrapPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NavInfoTemplate">
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" ItemHeight="Auto">
                    <Button Content="Dashboard" Style="{StaticResource NavButton}"
                            Click="OpenDashboard_Click"/>
                    <Button Content="Wall Lockers" Style="{StaticResource NavButton}"
                            Click="OpenWallLockers_Click"/>
                    <Button Content="Cigars" Style="{StaticResource NavButton}"
                            Click="OpenCigars_Click"/>
                </WrapPanel>
                <WrapPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" ItemHeight="Auto">
                    <Button Content="Info" Style="{StaticResource NavButton}"
                            IsEnabled="False"/>
                </WrapPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NavWallTemplate">
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" ItemHeight="Auto">
                    <Button Content="Dashboard" Style="{StaticResource NavButton}"
                            Click="OpenDashboard_Click"/>
                    <Button Content="Wall Lockers" Style="{StaticResource NavButton}"
                            IsEnabled="False"/>
                    <Button Content="Cigars" Style="{StaticResource NavButton}"
                            Click="OpenCigars_Click"/>
                </WrapPanel>
                <WrapPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" ItemHeight="Auto">
                    <Button Content="Info" Style="{StaticResource NavButton}"
                            Click="OpenInfo_Click"/>
                </WrapPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NavCigarsTemplate">
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <WrapPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" ItemHeight="Auto">
                    <Button Content="Dashboard" Style="{StaticResource NavButton}"
                            Click="OpenDashboard_Click"/>
                    <Button Content="Wall Lockers" Style="{StaticResource NavButton}"
                            Click="OpenWallLockers_Click"/>
                    <Button Content="Cigars" Style="{StaticResource NavButton}"
                            IsEnabled="False"/>
                </WrapPanel>
                <WrapPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" ItemHeight="Auto">
                    <Button Content="Info" Style="{StaticResource NavButton}"
                            Click="OpenInfo_Click"/>
                </WrapPanel>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    
    <Window.Effect>
        <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.5" Color="#000000"/>
    </Window.Effect>
    
    <Grid UseLayoutRounding="True" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Animated Background with Floating Light Orbs -->
        <Grid Grid.RowSpan="2" UseLayoutRounding="True" SnapsToDevicePixels="True">
            <!-- Dark Gradient Background -->
            <Grid.Background>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5">
                    <GradientStop Color="#FF0A0A0A" Offset="0"/>
                    <GradientStop Color="#FF050505" Offset="0.5"/>
                    <GradientStop Color="#FF000000" Offset="1"/>
                </RadialGradientBrush>
            </Grid.Background>
            
            <!-- Floating Light Orbs -->
            <Canvas Opacity="0.3">
                <!-- Blue Orb 1 -->
                <Ellipse x:Name="BlueOrb1" Width="80" Height="80" Canvas.Left="50" Canvas.Top="100">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF00D9FF" Offset="0"/>
                            <GradientStop Color="#FF00D9FF" Offset="0.3"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="BlueOrb1Scale" CenterX="40" CenterY="40"/>
                            <TranslateTransform x:Name="BlueOrb1Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <!-- Size animation with respawn cycle -->
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    From="0.8" To="0.1" Duration="0:0:8"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    From="0.8" To="0.1" Duration="0:0:8"
                                                    AutoReverse="False"/>
                                    <!-- Fly off screen when small -->
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:8"
                                                    From="0" To="-1000" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:8"
                                                    From="0" To="-500" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <!-- Respawn after random delay -->
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:15"
                                                    From="1000" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:15"
                                                    From="500" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <!-- Resize back to normal -->
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:15"
                                                    From="0.1" To="1.8" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:15"
                                                    From="0.1" To="1.8" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <!-- Continue normal cycle -->
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:16"
                                                    From="1.8" To="0.8" Duration="0:0:7"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:16"
                                                    From="1.8" To="0.8" Duration="0:0:7"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:16"
                                                    From="0" To="800" Duration="0:0:20"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:16"
                                                    From="0" To="300" Duration="0:0:15"
                                                    AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- Red Orb 1 -->
                <Ellipse x:Name="RedOrb1" Width="90" Height="90" Canvas.Left="200" Canvas.Top="200">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFF6B35" Offset="0"/>
                            <GradientStop Color="#FFFF6B35" Offset="0.3"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="RedOrb1Scale" CenterX="45" CenterY="45"/>
                            <TranslateTransform x:Name="RedOrb1Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    From="0.7" To="0.1" Duration="0:0:10"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    From="0.7" To="0.1" Duration="0:0:10"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:10"
                                                    From="0" To="1000" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:10"
                                                    From="0" To="600" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:18"
                                                    From="-1000" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:18"
                                                    From="-600" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:18"
                                                    From="0.1" To="1.6" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:18"
                                                    From="0.1" To="1.6" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:19"
                                                    From="1.6" To="0.7" Duration="0:0:9"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:19"
                                                    From="1.6" To="0.7" Duration="0:0:9"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:19"
                                                    From="0" To="-150" Duration="0:0:18"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:19"
                                                    From="0" To="200" Duration="0:0:12"
                                                    AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- White Orb 1 -->
                <Ellipse x:Name="WhiteOrb1" Width="70" Height="70" Canvas.Left="400" Canvas.Top="50">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0.4"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="WhiteOrb1Scale" CenterX="35" CenterY="35"/>
                            <TranslateTransform x:Name="WhiteOrb1Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    From="0.9" To="0.1" Duration="0:0:12"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    From="0.9" To="0.1" Duration="0:0:12"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:12"
                                                    From="0" To="-800" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:12"
                                                    From="0" To="800" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:20"
                                                    From="800" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:20"
                                                    From="-800" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:20"
                                                    From="0.1" To="2.0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:20"
                                                    From="0.1" To="2.0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:21"
                                                    From="2.0" To="0.9" Duration="0:0:11"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:21"
                                                    From="2.0" To="0.9" Duration="0:0:11"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:21"
                                                    From="0" To="-200" Duration="0:0:25"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="WhiteOrb1Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:21"
                                                    From="0" To="400" Duration="0:0:20"
                                                    AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- Blue Orb 2 -->
                <Ellipse x:Name="BlueOrb2" Width="100" Height="100" Canvas.Left="600" Canvas.Top="300">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF00D9FF" Offset="0"/>
                            <GradientStop Color="#FF00D9FF" Offset="0.3"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="BlueOrb2Scale" CenterX="50" CenterY="50"/>
                            <TranslateTransform x:Name="BlueOrb2Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    From="0.6" To="0.1" Duration="0:0:9"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    From="0.6" To="0.1" Duration="0:0:9"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:9"
                                                    From="0" To="1200" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:9"
                                                    From="0" To="-700" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:16"
                                                    From="-1200" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:16"
                                                    From="700" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:16"
                                                    From="0.1" To="1.7" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:16"
                                                    From="0.1" To="1.7" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:17"
                                                    From="1.7" To="0.6" Duration="0:0:8"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:17"
                                                    From="1.7" To="0.6" Duration="0:0:8"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:17"
                                                    From="0" To="-300" Duration="0:0:22"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="BlueOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:17"
                                                    From="0" To="-150" Duration="0:0:17"
                                                    AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- Red Orb 2 -->
                <Ellipse x:Name="RedOrb2" Width="75" Height="75" Canvas.Left="100" Canvas.Top="400">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFF6B35" Offset="0"/>
                            <GradientStop Color="#FFFF6B35" Offset="0.3"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="RedOrb2Scale" CenterX="37.5" CenterY="37.5"/>
                            <TranslateTransform x:Name="RedOrb2Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    From="0.8" To="0.1" Duration="0:0:11"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    From="0.8" To="0.1" Duration="0:0:11"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:11"
                                                    From="0" To="-900" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:11"
                                                    From="0" To="-500" Duration="0:0:2"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:17"
                                                    From="900" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:17"
                                                    From="500" To="0" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:17"
                                                    From="0.1" To="1.9" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:17"
                                                    From="0.1" To="1.9" Duration="0:0:1"
                                                    AutoReverse="False"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    BeginTime="0:0:18"
                                                    From="1.9" To="0.8" Duration="0:0:10"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Scale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    BeginTime="0:0:18"
                                                    From="1.9" To="0.8" Duration="0:0:10"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="X"
                                                    BeginTime="0:0:18"
                                                    From="0" To="500" Duration="0:0:19"
                                                    AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetName="RedOrb2Transform"
                                                    Storyboard.TargetProperty="Y"
                                                    BeginTime="0:0:18"
                                                    From="0" To="-100" Duration="0:0:14"
                                                    AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
                
                <!-- White Orb 2 -->
                <Ellipse x:Name="WhiteOrb2" Width="85" Height="85" Canvas.Left="700" Canvas.Top="150">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFFFFFFF" Offset="0"/>
                            <GradientStop Color="#FFFFFFFF" Offset="0.4"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="WhiteOrb2Scale" CenterX="42.5" CenterY="42.5"/>
                            <TranslateTransform x:Name="WhiteOrb2Transform"/>
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
