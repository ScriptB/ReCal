<Window x:Class="ReCal.UpdateProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloading Update" Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F23"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="8" Opacity="0.4" Color="#000000"/>
    </Window.Effect>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                  Text="Downloading update..." 
                  FontSize="16" 
                  FontWeight="SemiBold"
                  Foreground="#FFFFFFFF"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,15"/>
        
        <Border Grid.Row="1" 
                Background="#FF1A1A1A" 
                BorderBrush="#FF333333" 
                BorderThickness="1" 
                CornerRadius="8"
                Height="30"
                Margin="0,0,0,15">
            <Grid>
                <Rectangle x:Name="ProgressBarBackground" 
                          Fill="#FF2A2A2A" 
                          RadiusX="8" 
                          RadiusY="8"/>
                <Rectangle x:Name="ProgressBarFill" 
                          Fill="#FF00D9FF" 
                          RadiusX="8" 
                          RadiusY="8" 
                          HorizontalAlignment="Left" 
                          Width="0"/>
                <TextBlock x:Name="ProgressText" 
                          Text="0%" 
                          Foreground="#FFFFFFFF" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          FontSize="12"
                          FontWeight="Medium"/>
            </Grid>
        </Border>
        
        <TextBlock Grid.Row="2" 
                  x:Name="StatusText"
                  Text="Preparing download..." 
                  FontSize="12" 
                  Foreground="#FFB0B0B0"
                  HorizontalAlignment="Center"/>
    </Grid>
</Window>
