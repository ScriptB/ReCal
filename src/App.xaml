            <!-- Modern Button Style -->
            <Style x:Key="ModernButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource AccentColor}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="12"
                                    BorderThickness="2"
                                    BorderBrush="{StaticResource AccentColor}">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" 
                                                      ShadowDepth="4" 
                                                      Opacity="0.4" 
                                                      Color="#FF00D9FF"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="ButtonBorder"
                                                              Storyboard.TargetProperty="Background.Color"
                                                              To="#FFFF6B35" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="ButtonBorder"
                                                              Storyboard.TargetProperty="Background.Color"
                                                              To="#FF00D9FF" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Glass Button Style -->
            <Style x:Key="GlassButton" TargetType="Button">
                <Setter Property="Background" Value="#40101820"/>
                <Setter Property="Foreground" Value="#F2FFFFFF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#99FFFFFF"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="GlassBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="10"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="GlassBorder" Property="Background" Value="#60182030"/>
                                    <Setter TargetName="GlassBorder" Property="BorderBrush" Value="#CCFFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="GlassBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="#99FFFFFF"/>
                                    <Setter TargetName="GlassBorder" Property="Background" Value="#30101820"/>
                                    <Setter TargetName="GlassBorder" Property="BorderBrush" Value="#55FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Nav Button Style -->
            <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource GlassButton}">
                <Setter Property="Height" Value="{StaticResource NavButtonHeight}"/>
                <Setter Property="Padding" Value="{StaticResource NavButtonPadding}"/>
                <Setter Property="Margin" Value="{StaticResource NavButtonMargin}"/>
            </Style>
            
            <!-- Card Style with Frosted Glass Effect -->
            <Style x:Key="ModernCard" TargetType="Border">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.25">
                            <GradientStop Color="#FF1A1A1A" Offset="0"/>
                            <GradientStop Color="#FF2A2A2A" Offset="0.5"/>
                            <GradientStop Color="#FF1A1A1A" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                            <GradientStop Color="#FF404040" Offset="0"/>
                            <GradientStop Color="#FF606060" Offset="0.5"/>
                            <GradientStop Color="#FF404040" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="25" 
                                          ShadowDepth="10" 
                                          Opacity="0.3" 
                                          Color="#000000"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Card Tile Style -->
            <Style x:Key="CardTile" TargetType="Border" BasedOn="{StaticResource ModernCard}">
                <Setter Property="Margin" Value="{StaticResource CardTileMargin}"/>
                <Setter Property="MinWidth" Value="{StaticResource TileMinWidth}"/>
            </Style>
            
            <!-- Value Text Style -->
            <Style x:Key="ValueTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- Label Text Style -->
            <Style x:Key="LabelTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
                <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
                <Setter Property="RenderOptions.ClearTypeHint" Value="Enabled"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- Icon Style -->
            <Style x:Key="VectorIcon" TargetType="Path">
                <Setter Property="Fill" Value="White"/>
                <Setter Property="Width" Value="24"/>
                <Setter Property="Height" Value="24"/>
                <Setter Property="Stretch" Value="Uniform"/>
                <Setter Property="UseLayoutRounding" Value="True"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
            </Style>
            
            <!-- Social Media Button Style with Frosted Glass Effect -->
            <Style x:Key="SocialButton" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                            <GradientStop Color="#FF2A2D3A" Offset="0"/>
                            <GradientStop Color="#FF3A3D4A" Offset="0.5"/>
                            <GradientStop Color="#FF2A2D3A" Offset="1"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8"/>
                <Setter Property="Width" Value="30"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="SocialButtonBorder" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="6"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.4">
                                        <GradientStop Color="#FF3A3D4A" Offset="0"/>
                                        <GradientStop Color="#FF4A4D5A" Offset="0.5"/>
                                        <GradientStop Color="#FF3A3D4A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" 
                                                      ShadowDepth="3" 
                                                      Opacity="0.25" 
                                                      Color="#000000"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[0].Color"
                                                              To="#FF3A3D4A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[1].Color"
                                                              To="#FF4A4D5A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[2].Color"
                                                              To="#FF3A3D4A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[0].Color"
                                                              To="#FF00D9FF" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[1].Color"
                                                              To="#FF00B8E6" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[2].Color"
                                                              To="#FF00D9FF" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[0].Color"
                                                              To="#FF2A2D3A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[1].Color"
                                                              To="#FF3A3D4A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="Background.(GradientBrush.GradientStops)[2].Color"
                                                              To="#FF2A2D3A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[0].Color"
                                                              To="#FF3A3D4A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[1].Color"
                                                              To="#FF4A4D5A" Duration="0:0:0.2"/>
                                                <ColorAnimation Storyboard.TargetName="SocialButtonBorder"
                                                              Storyboard.TargetProperty="BorderBrush.(GradientBrush.GradientStops)[2].Color"
                                                              To="#FF3A3D4A" Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="SocialButtonBorder" Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Custom TabControl Style -->
            <Style x:Key="CustomTabControl" TargetType="TabControl">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Tab Panel -->
                                <Border Grid.Row="0" Background="#FF1A1A2E" CornerRadius="12,12,0,0" Margin="0,0,0,3">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.3" Color="#000000"/>
                                    </Border.Effect>
                                    <TabPanel x:Name="HeaderPanel" 
                                              IsItemsHost="True"
                                              Panel.ZIndex="1"
                                              Margin="8,3"
                                              Background="Transparent"/>
                                </Border>
                                
                                <!-- Content Area -->
                                <Border Grid.Row="1" Background="#FF0F0F23" CornerRadius="0,0,12,12">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="16" ShadowDepth="6" Opacity="0.4" Color="#000000"/>
                                    </Border.Effect>
                                    <ContentPresenter x:Name="PART_SelectedContentHost"
                                                    ContentSource="SelectedContent"
                                                    Margin="0"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Custom TabControl Style (No Header) -->
            <Style x:Key="CustomTabControlNoHeader" TargetType="TabControl">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <Border Background="Transparent" CornerRadius="12">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"
                                                  Margin="0"
                                                  HorizontalAlignment="Stretch"
                                                  VerticalAlignment="Stretch"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- Custom TabItem Style -->
            <Style x:Key="CustomTabItem" TargetType="TabItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Margin" Value="3,2"/>
                <Setter Property="Padding" Value="18,8"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Foreground" Value="#FFB0B0B0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="TabBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    CornerRadius="8"
                                    UseLayoutRounding="True" SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#000000"/>
                                </Border.Effect>
                                <ContentPresenter x:Name="ContentSite"
                                                ContentSource="Header"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                RecognizesAccessKey="True"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF1A2A2A" Offset="0"/>
                                                <GradientStop Color="#FF2A2D3A" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter TargetName="TabBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="#FF00D9FF"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="TabBorder" Property="Background">
                                        <Setter.Value>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF2A2D3A" Offset="0"/>
                                                <GradientStop Color="#FF3A3D4A" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="#FFD0D0D0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
