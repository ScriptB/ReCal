<Application x:Class="ReCal.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Modern Color Palette -->
            <SolidColorBrush x:Key="PrimaryBackground" Color="#FF0F0F23"/>
            <SolidColorBrush x:Key="SecondaryBackground" Color="#FF1A1A2E"/>
            <SolidColorBrush x:Key="CardBackground" Color="#FF16213E"/>
            <SolidColorBrush x:Key="AccentColor" Color="#FF00D9FF"/>
            <SolidColorBrush x:Key="AccentHover" Color="#FF00B8E6"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFFFF"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#FFB0B0B0"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#FF00FF88"/>
            <SolidColorBrush x:Key="WarningColor" Color="#FFFF6B35"/>
            <SolidColorBrush x:Key="PanelSurface" Color="#FF2A2D3A"/>
            <SolidColorBrush x:Key="PanelSurfaceAlt" Color="#FF3A3D4A"/>
            <SolidColorBrush x:Key="DashboardGlassBg" Color="#66101820"/>
            <SolidColorBrush x:Key="DashboardGlassBorder" Color="#99FFFFFF"/>

            <!-- Spacing & Sizing -->
            <sys:Double x:Key="CardMargin">10</sys:Double>
            <sys:Double x:Key="TileMinWidth">320</sys:Double>
            <sys:Double x:Key="NavButtonHeight">28</sys:Double>
            <Thickness x:Key="NavButtonPadding">12,0</Thickness>
            <Thickness x:Key="NavButtonMargin">0,0,8,0</Thickness>
            <Thickness x:Key="CardTileMargin">0,0,10,10</Thickness>
            <Thickness x:Key="CardPadding">25</Thickness>
            <Thickness x:Key="SectionSpacing">0,0,0,12</Thickness>

            <!-- Text Styles -->
            <Style x:Key="TitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Light"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            </Style>
            <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            </Style>
            <Style x:Key="SectionTitleTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="Light"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            </Style>
            <Style x:Key="BodyTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            </Style>
            <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="#FFB0B0B0"/>
            </Style>
            
            <!-- Glass Effect Brush -->
            <LinearGradientBrush x:Key="GlassBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#20FFFFFF" Offset="0"/>
                <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                <GradientStop Color="#05FFFFFF" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Frosted Glass Background Brush -->
            <LinearGradientBrush x:Key="FrostedGlassBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#30FFFFFF" Offset="0"/>
                <GradientStop Color="#15FFFFFF" Offset="0.5"/>
                <GradientStop Color="#08FFFFFF" Offset="1"/>
            </LinearGradientBrush>
            
            <!-- Dark Frosted Glass Background Brush -->
            <LinearGradientBrush x:Key="DarkFrostedGlassBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#401A1A1A" Offset="0"/>
                <GradientStop Color="#252A2A2A" Offset="0.5"/>
                <GradientStop Color="#151A1A1A" Offset="1"/>
            </LinearGradientBrush>
            
