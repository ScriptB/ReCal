<Window x:Class="ReCal.TermsOfServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReCal Terms of Service" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F23"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        RenderOptions.ClearTypeHint="Enabled"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    
    <Window.Effect>
        <DropShadowEffect BlurRadius="25" ShadowDepth="10" Opacity="0.5" Color="#000000"/>
    </Window.Effect>
    
    <Window.Resources>
        <!-- Local Modern Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.25">
                        <GradientStop Color="#FF1A1A1A" Offset="0"/>
                        <GradientStop Color="#FF2A2A2A" Offset="0.5"/>
                        <GradientStop Color="#FF1A1A1A" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.3">
                        <GradientStop Color="#FF404040" Offset="0"/>
                        <GradientStop Color="#FF606060" Offset="0.5"/>
                        <GradientStop Color="#FF404040" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="25" 
                                      ShadowDepth="10" 
                                      Opacity="0.3" 
                                      Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Local Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF00D9FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                BorderThickness="2"
                                BorderBrush="#FF00D9FF">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" 
                                                  ShadowDepth="4" 
                                                  Opacity="0.4" 
                                                  Color="#FF00D9FF"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFFF6B35"/>
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FFFF6B35"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20" UseLayoutRounding="True" SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="ReCal Terms of Service" 
                          FontSize="24" 
                          FontWeight="Light" 
                          HorizontalAlignment="Center"
                          Foreground="#FFFFFFFF"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType"/>
                <TextBlock Text="ReCal" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Foreground="#FFB0B0B0"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,15">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          TextOptions.TextFormattingMode="Display"
                          TextOptions.TextRenderingMode="ClearType">
                <StackPanel>
                    <TextBlock Text="1. Acceptance"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="By using this application, you agree to these Terms of Service. If you do not agree, do not use the app."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="2. License &amp; Allowed Use"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="You are granted a limited, non?exclusive, non?transferable license to use the app for personal, non?commercial purposes. Commercial use requires written permission from the creator."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="3. Prohibited Actions (No Tampering)"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="You may not modify, tamper with, decompile, reverse engineer, bypass protections, or otherwise alter the app, its files, or its behavior. Do not remove attribution, change credits, or distribute modified builds. Only the creator may modify or redistribute official versions."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="4. Integrity &amp; Security"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="We take reasonable steps to protect the app, but no software can be made completely tamper?proof. If you detect altered or unofficial versions, do not use them and report them to the creator."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="5. Attribution &amp; Distribution"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="You may share the official app as?is with proper credit to the creator. Any redistribution must preserve original files and credits."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="6. No Warranty"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="The app is provided ?as is? without warranties of any kind. Calculations are provided for reference only and may be affected by game updates or server settings."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="7. Limitation of Liability"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="To the maximum extent permitted by law, the creator is not liable for any indirect, incidental, or consequential damages arising from use of the app."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="8. Privacy"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="The app does not collect, store, or transmit personal data. All calculations occur locally."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="9. Changes to These Terms"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="We may update these terms at any time. Continued use after updates means you accept the revised terms."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="10. Contact"
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="#FFFFFFFF"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Questions or reports: Discord https://discord.gg/2CXVDasA6Z. Creator: Asuneteric."
                              FontSize="12" 
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Last Updated: February 25, 2026"
                              FontSize="11" 
                              FontStyle="Italic"
                              Foreground="#FFB0B0B0"
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="I Agree" 
                    Style="{StaticResource ModernButton}"
                    Click="AgreeButton_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Decline" 
                    Background="#FFFF6B35"
                    Style="{StaticResource ModernButton}"
                    Click="DeclineButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
